local Players = game:GetService("Players")
local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()

local leftHand = character:WaitForChild("LeftHand")

-- Create ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = player:WaitForChild("PlayerGui")

-- Function to create a draggable frame
local function createDraggableFrame(name, color, position)
    local frame = Instance.new("Frame")
    frame.Name = name
    frame.Size = UDim2.new(0, 100, 0, 50)
    frame.Position = position
    frame.BackgroundColor3 = color
    frame.Active = true
    frame.Draggable = true

    -- Label
    local label = Instance.new("TextLabel")
    label.Text = name
    label.Size = UDim2.new(1, 0, 1, 0)
    label.BackgroundTransparency = 1
    label.TextColor3 = Color3.new(1, 1, 1)
    label.Font = Enum.Font.SourceSansBold
    label.TextScaled = true
    label.Parent = frame

    frame.Parent = screenGui

    -- Dragging functionality to move the left hand
    frame:GetPropertyChangedSignal("Position"):Connect(function()
        leftHand.Position = Vector3.new(frame.Position.X.Offset, leftHand.Position.Y, frame.Position.Y.Offset)
    end)

    return frame
end

-- Create the L-HAND and R-HAND frames
local lHandFrame = createDraggableFrame("L-HAND", Color3.new(1, 0, 0), UDim2.new(0, 50, 0, 50)) -- Red
local rHandFrame = createDraggableFrame("R-HAND", Color3.new(0, 1, 0), UDim2.new(0, 200, 0, 50)) -- Green
